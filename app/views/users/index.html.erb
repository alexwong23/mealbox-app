<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<%= link_to 'Add User', new_user_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Contact No</th>
    <th>Birthdate</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.contactno %></td>
      <td><%= user.birthdate %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td>
        <%= link_to 'Remove', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
