<%= form_for @recipe, url: recipes_path, :html => {:id => "msform"} do |f| %>

  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Create recipe</li>
    <li>Choose your ingredients</li>
    <li>Insert your instructions</li>
    <li>Submit your recipe</li>
  </ul>

  <fieldset>
    <h2 class="fs-title">Create your recipe</h2>
    <%= f.hidden_field :user_id, :value=> current_user.id %>
    <%= hidden_field_tag(:recipe_ingredient_json, "nil", :id => "recipe_ingredients") %>
    <%= f.text_field :name, placeholder: "Recipe Name" %>
    <%= f.text_field :image, placeholder: "Recipe Image" %>
    <%= f.select :cuisine, [['Cuisine', 'nil'],['Western', 'Western'], ['Asian', 'Asian'], ['Chinese', 'Chinese'], ['Malay', 'Malay']] %>

    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
    <h2 class="fs-title">Choose your ingredients</h2>
    <h3 class="fs-subtitle">From potato, carrots, curry paste and many more!</h3>
        <input type="text" id="name" placeholder="Ingredient">
        <input type="text" id="quantity" placeholder="Quantity">
        <select type="text" id="ingredient-category">
          <option value="Condiments">Condiments</option>
          <option value="Grains">Grains</option>
          <option value="Sauces">Sauces</option>
          <option value="Liquid">Liquid</option>
        </select>
        <input type="button" class="add-row action-button" value="Add Ingredient">
          <table>
              <thead>
                  <tr>
                      <th>Select</th>
                      <th>Ingredient</th>
                      <th>Quantity</th>
                  </tr>
              </thead>
               <tbody>
              </tbody>
          </table>
          <button type="button" class="delete-row">Delete Ingredient</button>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>

  <fieldset>
   <h2 class="fs-title">Insert your instructions</h2>
   <h3 class="fs-subtitle">Break down your instructions into steps</h3>
     <%= f.text_area :instructions, cols: 30, rows: 10, id: "instructionArea", placeholder: "Type out the instructions in the format below:
     1. Boil the noodles
     2. Cook tomato sauce
     3. Dice Onions" %>
   <input type="button" name="previous" class="previous action-button" value="Previous" />
   <input type="button" name="next" class="next action-button" value="Next" />
 </fieldset>

  <fieldset>
    <h2 class="fs-title">Are you sure of your recipe?</h2>
    <h3 class="fs-subtitle">You can always make the changes, if not.. just submit </h3>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <%= f.submit "Submit",class: "submit action-button" %>
  </fieldset>
<% end %>
</form>
